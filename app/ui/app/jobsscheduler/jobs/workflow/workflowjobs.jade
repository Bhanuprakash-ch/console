h3
    | Workflow jobs browser

.time-range-filter
    label Time range:
    div
        label.radio.radio-inline(ng-repeat='range in timeRanges')
            input(type='radio', name='timeRange', ng-click='getJobs(range.unit, range.amount)',
            ng-checked='unit===range.unit && amount===range.amount')
            span.fa.fa-circle
            | {{range.text}}

spinner(ng-show='state.isPending()')

.panel.panel-warning(ng-show='state.isError()')
    .panel-heading Error loading content
    .panel-body Service is unavailable

div(ng-if='state.isLoaded()')
    .submitted
        div(ng-if='!workflows.length')
            h4 No running jobs
        .span12.row-fluid
            div
                table.table-striped(ng-show='workflows.length', ng-table="tableParams", show-filter="true" class="table")
                    tr(ng-repeat="job in $data")
                        td(data-title="'Name'" filter="{ 'appName': 'text'}" sortable="'appName'") {{ job.appName }}
                        td(data-title="'Id'" filter="{ 'id': 'text'}") {{ job.id }}
                        td(data-title="'Created time'" sortable="'createdTime'") {{ job.createdTime }}
                        td(data-title="'Start time'" sortable="'startTime'") {{ job.startTime }}
                        td(data-title="'End time'" sortable="'endTime'") {{ job.endTime }}
                        td(data-title="'Status'" filter="{ 'status': 'text'}" sortable="'status'")
                            d-status(status="job.status")
                        td
                            a(ui-sref='app.jobsscheduler.workflowjob({ workflowjobId: job.id })') See details
